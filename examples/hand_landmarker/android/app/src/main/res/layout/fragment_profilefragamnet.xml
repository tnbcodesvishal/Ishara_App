<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    android:background="@color/white"
    tools:context=".fragment.profilefragamnet">

    <!-- MAIN PARENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TITLE BAR -->
        <LinearLayout
            android:id="@+id/r662ncfkgyny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/rqqw73j51j2s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- PROFILE SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="64dp"
                app:cardUseCompatPadding="true"
                android:clipToPadding="true"
                android:clipChildren="true">

                <ImageView
                    android:id="@+id/profilephoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vansh" />

            </androidx.cardview.widget.CardView>
            <!-- USERNAME -->
            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vansh Tyagi"
                android:textColor="#0C0F1C"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <!-- AGE + GENDER -->
            <TextView
                android:id="@+id/rxv1aoosjkz9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vanshTyagi@3321gmail.com"
                android:textColor="#4F5996"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <!-- TYPE -->
            <TextView
                android:id="@+id/r5hejy7517aj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deaf"
                android:textColor="#4F5996"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
